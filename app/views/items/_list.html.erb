<% if @items.blank? %>
  <div class="panel panel-default">
    <div class="panel-body">
      "No Items Available"
    </div>
  </div>
<% end %>

<div class="row" id="filterrific_results">
  <% @items.each do |item| %>
    <div class="col-sm-6 col-md-3">
      <div class="thumbnail">
        <%= image_tag(item.photo.thumb.url) %>
        <div class="caption">
          <h3>
            <%= link_to item.name, item %>
          </h3>
          <p><b>style:</b><%= item.style%> </p>
          <p><b>price:</b><%= item.price%> </p>

          <% if admin_signed_in? %>
            <p>
              <%= link_to 'Edit', edit_item_path(item), class:"btn btn-default", role: "button" %>
              <%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %>
            </p>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
